{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60,
      "includeFiles": "mcp-server/data/**"
    }
  },
  "rewrites": [
    {
      "source": "/mcp/messages",
      "destination": "/api/mcp/messages"
    },
    {
      "source": "/mcp",
      "destination": "/api/mcp"
    }
  ]
}
